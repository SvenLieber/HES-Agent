{
  "id": "https://github.com/cristianvasquez/H-Eye/operations#",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "schema for a meta operation entry",
  "type": "object",
  "properties": {
    "hes:Content-Type:": {
      "description": "Defaults: application/x-json+ld",
      "enum": [
        "text/turtle",
        "application/x-json+ld"
      ]
    }
  },
  "oneOf": [
    {
      "$ref": "#/definitions/imports"
    }
  ],
  "definitions": {
    "resources": {
      "type": "object",
      "anyOf": [
        {
          "$ref": "#/definitions/raw-resource"
        },
        {
          "$ref": "#/definitions/href-resource"
        },
        {
          "$ref": "#/definitions/raw-array-resource"
        },
        {
          "$ref": "#/definitions/href-array-resource"
        }
      ]
    },
    "raw-resource": {
      "type": "object",
      "properties": {
        "hes:raw": {
          "type": "string"
        }
      },
      "required": [
        "hes:raw"
      ]
    },
    "href-resource": {
      "type": "object",
      "properties": {
        "hes:href": {
          "type": "string",
          "format": "uri-template"
        }
      },
      "required": [
        "hes:href"
      ]
    },
    "raw-array-resource": {
      "type": "object",
      "properties": {
        "hes:raw": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      },
      "required": [
        "hes:raw"
      ]
    },
    "href-array-resource": {
      "type": "object",
      "properties": {
        "hes:href": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri-template"
          },
          "uniqueItems": true
        }
      },
      "required": [
        "hes:href"
      ]
    },
    "imports": {
      "type": "object",
      "properties": {
        "hes:imports": {
          "type": "object",
          "properties": {
            "@id": {
              "type": "string",
              "format": "uri-template"
            },
            "hes:data": {
              "$ref": "#/definitions/resources"
            },
            "hes:addData": {
              "$ref": "#/definitions/resources"
            },
            "hes:removeData": {
              "$ref": "#/definitions/resources"
            }
          },
          "required": [
            "@id"
          ]
        }
      },
      "required": [
        "hes:imports"
      ]
    }
  }
}
