{
  "id": "https://github.com/cristianvasquez/H-Eye/crud-operations#",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "schema for a meta operation entry",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "examples": [
        "first_operation"
      ]
    },
    "Content-Type:": {
      "description": "Defaults: application/x-json+ld",
      "enum": [
        "text/turtle",
        "application/x-json+ld"
      ]
    }
  },
  "required": [
    "name"
  ],
  "oneOf": [
    {
      "$ref": "#/definitions/raw"
    },
    {
      "$ref": "#/definitions/href"
    },
    {
      "$ref": "#/definitions/query"
    },
    {
      "$ref": "#/definitions/inference"
    },
    {
      "$ref": "#/definitions/imports"
    }
  ],
  "definitions": {
    "resources": {
      "type": "object",
      "anyOf": [
        {
          "$ref": "#/definitions/raw-resource"
        },
        {
          "$ref": "#/definitions/href-resource"
        },
        {
          "$ref": "#/definitions/raw-array-resource"
        },
        {
          "$ref": "#/definitions/href-array-resource"
        }
      ]
    },
    "raw-resource": {
      "type": "object",
      "properties": {
        "raw": {
          "type": "string"
        }
      },
      "required": [
        "raw"
      ]
    },
    "href-resource": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "format": "uri-template"
        }
      },
      "required": [
        "href"
      ]
    },
    "raw-array-resource": {
      "type": "object",
      "properties": {
        "raw": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      },
      "required": [
        "raw"
      ]
    },
    "href-array-resource": {
      "type": "object",
      "properties": {
        "href": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri-template"
          },
          "uniqueItems": true
        }
      },
      "required": [
        "href"
      ]
    },
    "raw": {
      "type": "object",
      "properties": {
        "raw": {
          "type": "string"
        }
      },
      "required": [
        "raw"
      ]
    },
    "href": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "format": "uri-template"
        }
      },
      "required": [
        "href"
      ]
    },
    "query": {
      "type": "object",
      "properties": {
        "query": {
          "type": "object",
          "properties": {
            "endpoint": {
              "type": "string",
              "format": "uri-template"
            },
            "default-graph-uri": {
              "type": "string"
            },
            "raw": {
              "type": "string"
            },
            "Accept": {
              "type": "string"
            }
          },
          "required": [
            "endpoint",
            "raw"
          ]
        }
      },
      "required": [
        "query"
      ]
    },
    "inference": {
      "type": "object",
      "properties": {
        "inference": {
          "type": "object",
          "properties": {
            "data": {
              "$ref": "#/definitions/resources"
            },
            "query": {
              "oneOf": [
                {
                  "$ref": "#/definitions/raw-resource"
                },
                {
                  "$ref": "#/definitions/href-resource"
                }
              ]
            }
          },
          "required": [
            "data",
            "query"
          ]
        }
      },
      "required": [
        "inference"
      ]
    },
    "imports": {
      "type": "object",
      "properties": {
        "imports": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string",
              "format": "uri-template"
            },
            "data": {
              "$ref": "#/definitions/resources"
            },
            "addData": {
              "$ref": "#/definitions/resources"
            },
            "removeData": {
              "$ref": "#/definitions/resources"
            }
          },
          "required": [
            "href"
          ]
        }
      },
      "required": [
        "imports"
      ]
    }
  }
}
